# =============================================================================
# SERVER TESTNET CONFIGURATION TEMPLATE
# =============================================================================
# Copy this to .env for testnet deployment
# =============================================================================

# Enable testnet mode (shows faucet endpoint, uses MockMNEE)
TESTNET_MODE=true

# Server port
PORT=3001

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/commit-testnet

# Sepolia RPC URL
RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Chain ID for Sepolia
CHAIN_ID=11155111

# Contract addresses (filled after deployment)
CONTRACT_ADDRESS=0x...from_deploy_output...
MNEE_TOKEN_ADDRESS=0x...from_deploy_output...

# Relayer wallet (bot wallet that signs all transactions)
RELAYER_PRIVATE_KEY=0x...your_relayer_private_key...

# IPFS (Pinata) for storing specs/evidence
PINATA_API_KEY=
PINATA_SECRET_KEY=

# Discord Bot Token (for verification)
DISCORD_BOT_TOKEN=
