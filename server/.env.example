# =============================================================================
# MNEE Commit Protocol Server - Environment Configuration
# =============================================================================

# Server
PORT=3000

# =============================================================================
# Blockchain Configuration
# =============================================================================
CHAIN_ID=84532
RPC_URL=https://sepolia.base.org
CONTRACT_ADDRESS=0x...your-contract-address
MNEE_TOKEN_ADDRESS=0x...your-token-address

# Relayer wallet for write operations (optional - server runs read-only without this)
RELAYER_PRIVATE_KEY=0x...your-private-key

# =============================================================================
# Database (MongoDB)
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/mnee-commit

# =============================================================================
# AI Agents (Gemini)
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key

# GitHub API (for GitHub Code Diff Agent)
GITHUB_TOKEN=ghp_your-github-token

# =============================================================================
# IPFS (Pinata)
# =============================================================================
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key
PINATA_GATEWAY=https://gateway.pinata.cloud/ipfs

# =============================================================================
# Admin
# =============================================================================
ADMIN_SECRET=your-admin-secret
