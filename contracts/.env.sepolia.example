# =============================================================================
# SEPOLIA TESTNET CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# RPC & NETWORK
# -----------------------------------------------------------------------------
# Get a free RPC URL from Infura (https://infura.io) or Alchemy (https://alchemy.com)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Chain ID for Sepolia testnet
CHAIN_ID=11155111

# -----------------------------------------------------------------------------
# WALLETS & KEYS
# -----------------------------------------------------------------------------
# Private key for deploying contracts (needs Sepolia ETH)
# Get Sepolia ETH from: https://sepoliafaucet.com
DEPLOYER_PRIVATE_KEY=0x...your_private_key_here...

# Address that will be the relayer (bot wallet)
# This is the only address allowed to call contract functions
# Can be same as deployer or a separate address
RELAYER_ADDRESS=0x...relayer_address...

# Relayer's private key (needed for the server/bot to sign transactions)
RELAYER_PRIVATE_KEY=0x...relayer_private_key...

# Arbitrator address (resolves disputes)
ARBITRATOR_ADDRESS=0x...arbitrator_address...

# -----------------------------------------------------------------------------
# CONTRACT ADDRESSES (filled after deployment)
# -----------------------------------------------------------------------------
# These will be output by the deploy script - copy them here after deployment
CONTRACT_ADDRESS=
MNEE_TOKEN_ADDRESS=

# -----------------------------------------------------------------------------
# ETHERSCAN (optional - for contract verification)
# -----------------------------------------------------------------------------
ETHERSCAN_API_KEY=your_etherscan_api_key
